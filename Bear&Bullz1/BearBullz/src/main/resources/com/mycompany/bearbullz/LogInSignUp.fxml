<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.bearbullz.LogInSignUpController" alignment="center" spacing="10" style="-fx-padding: 20; -fx-background-color: #f0f8ff;">
    <Label text="BearBullz" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    
    <!-- Login Fields -->
    <Label text="Email ID:" />
    <TextField fx:id="emailField" />
    
    <Label text="Password:" />
    <PasswordField fx:id="passwordField" />

    <!-- Buttons -->
    <Button text="Login" onAction="#handleLoginAction" />
    <Button text="Sign up!" onAction="#handleShowSignupPage" style="-fx-text-fill: #ff4500;" />
</VBox>
